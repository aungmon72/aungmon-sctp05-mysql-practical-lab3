{{#extends "base"}}
{{#block "content"}}
<h1>Customers</h1>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Rating</th>
        <th>Company</th>

        <th>Action</th>
    </tr>


    {{#each customers}}
    <tr>
        
        <td>{{this.first_name}}
        </td>
        <td>{{this.last_name}}
        </td>
        <td>{{this.rating}}
        </td>
        <td>{{this.name}}</td>

        <td><a href="/customers/{{customer_id}}/edit">Edit</a>
    </tr>
    {{/each}}
</table>
{{/block}}
{{/extends}}
